<!-- presentation logic is defined declaratively in this XML view -->
<!-- UI controls are located in libraries that we define in the View tag -->
<!-- use the bread-and-butter controls from sap.m -->
<!-- UI controls in the view are "App" and "Page". They define a Web app with a header bar and a title. -->
<!-- The "Button" defines a type and a class attribute which improves the layout and makes it stand out more. -->
<!-- The ".onPressButton" event references an event handler function in the App.controller.js -->
<mvc:View
	controllerName="Quickstart.App"
	displayBlock="true"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<m:App>
		<m:Page title="My Hello World App">
			<m:Button
				text="Steady..."
				press=".onPressButton"
				type="Emphasized"
				class="sapUiSmallMargin"/>
		</m:Page>
	</m:App>
</mvc:View>