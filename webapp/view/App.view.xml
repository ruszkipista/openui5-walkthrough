<mvc:View controllerName="sap.ui.demo.walkthrough.controller.App"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc"
   xmlns:core="sap.ui.core"
   displayBlock="true">
   <Shell>
   <App>
      <pages>
         <Page title="{i18n>app.page.title}">
            <content>
               <Panel headerText="{i18n>app.panel.title}"
                      class="sapUiResponsiveMargin"
                      width="auto">
                  <content>

                     <Button
                        text="{i18n>app.button.hello}"
                        press=".onShowHello"
                        class="sapUiSmallMarginEnd"/>

<!-- avoid having dependency to an intermediate Controller and make use of formatMessage independently -->
                     <Input
                        value="{/recipient/name}"
                        valueLiveUpdate="true"
                        width="60%"/>
                     <Text
                        core:require="{ formatMessage: 'sap/base/strings/formatMessage' }"
                        text="{
                           parts: [
                           'i18n>app.toast.greet',
                           '/recipient/name'
                           ],
                           formatter: 'formatMessage'
                        }"
                        class="sapUiSmallMargin"/>
                  </content>
               </Panel>
            </content>
         </Page>
      </pages>
   </App>
   </Shell>
</mvc:View>